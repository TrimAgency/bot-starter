{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "outDir": "dist/",
    "sourceMap": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"]
  }
}
