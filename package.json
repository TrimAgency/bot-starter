{
  "name": "bot-starter",
  "version": "alpha",
  "description": "TRIM Typescript Starter for Slackbots",
  "main": "index.ts",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "build:watch": "onchange 'src/**/*.ts' -- yarn run build",
    "clean": "rm -rf coverage dist"
  },
  "keywords": [
    "TRIM",
    "Slackbot",
    "Botkit",
    "Typescript"
  ],
  "author": "TRIM - <services@trimagency.com>",
  "license": "MIT",
  "dependencies": {
    "ts-node": "^8.10.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.0",
    "typescript": "^3.8.3"
  }
}